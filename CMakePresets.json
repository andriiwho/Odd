{
  "version": 9,
  "configurePresets": [
    {
      "name": "base-base",
      "hidden": true,
      "binaryDir": "${sourceDir}/BuildTree/${presetName}",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/Binaries/${presetName}",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/Binaries/${presetName}",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/BuildTree/${presetName}/Intermediates"
      }
    },
    {
      "name": "dev-base",
      "hidden": true,
      "inherits": [ "base-base" ],
      "cacheVariables": { "CMAKE_BUILD_TYPE": "RelWithDebInfo" }
    },
    {
      "name": "debug-base",
      "hidden": true,
      "inherits": [ "base-base" ],
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "distribution-base",
      "hidden": true,
      "inherits": [ "base-base" ],
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "dev-current",
      "displayName": "Dev",
      "inherits": [ "dev-base" ]
    },
    {
      "name": "debug-current",
      "displayName": "Debug",
      "inherits": [ "debug-base" ]
    },
    {
      "name": "distribution-current",
      "displayName": "Distribution",
      "inherits": [ "distribution-base" ]
    }
  ],
  "buildPresets": [
    {
      "name": "dev-build",
      "displayName": "Development",
      "configurePreset": "dev-current"
    },
    {
      "name": "debug-build",
      "displayName": "Debug",
      "configurePreset": "debug-current"
    },
    {
      "name": "dist-build",
      "displayName": "Distribution",
      "configurePreset": "distribution-current"
    }
  ]
}